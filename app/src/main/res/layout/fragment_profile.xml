<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/setFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="280dp"
        android:layout_marginVertical="130dp"
        android:drawableStart="@drawable/baseline_photo_camera_24"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="190dp"
        android:layout_marginTop="10dp"
        android:text="Nama :"
        android:layout_marginHorizontal="5dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="190dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:layout_toRightOf="@+id/tvTanggal"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:text="Tempat Lahir :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="240dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvTanggal"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="290dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:text="Tanggal Lahir :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="290dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvTanggal"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvHandphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="340dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:text="Handphone :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textHandphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="340dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvTanggal"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="390dp"
        android:layout_marginTop="10dp"
        android:text="Alamat :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="390dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tvTanggal"
        android:text=""
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="490dp"
        android:padding="10dp"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="25sp"/>


</RelativeLayout>