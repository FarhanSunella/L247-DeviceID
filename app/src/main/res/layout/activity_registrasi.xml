<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".RegistrasiActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvRegis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:text="REGISTRASI"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvRegisEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="50dp"
                android:text="Email :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/tvRegis" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:textColorHint="#B9B8B8"
                app:layout_constraintTop_toBottomOf="@+id/tvRegisEmail">

                <EditText
                    android:id="@+id/RegisEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="0dp"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisEmail" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvRegisNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:text="Nama :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#B9B8B8"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRegisNama">

                <EditText
                    android:id="@+id/RegisNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="0dp"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisNama" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvRegisTempatLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:text="Tempat Lahir :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#B9B8B8"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRegisTempatLahir">

                <EditText
                    android:id="@+id/RegisTempatLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="0dp"
                    android:inputType="text"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisTempatLahir" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvRegisTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:text="Tanggal Lahir :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#B9B8B8"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRegisTanggalLahir">

                <EditText
                    android:id="@+id/RegisTanggalLahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="0dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:drawableEnd="@drawable/baseline_calendar_month_24"
                    android:focusable="false"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisTanggalLahir" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tvRegisHandphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:text="Handphone :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#B9B8B8"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRegisHandphone">

                <EditText
                    android:id="@+id/RegisHandphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="0dp"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisHandphone" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvRegisAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:text="Alamat :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout5" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#B9B8B8"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRegisAlamat">

                <EditText
                    android:id="@+id/RegisAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="0dp"
                    android:inputType="textPostalAddress"
                    android:minLines="3"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisAlamat" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvRegisPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:text="Password :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout6" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#B9B8B8"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRegisPassword"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/RegisPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="0dp"
                    android:inputType="textPassword"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvRegisKonPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:text="Konfirmasi Password :"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout7"
                tools:layout_editor_absoluteX="73dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#B9B8B8"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRegisKonPassword"
                app:passwordToggleEnabled="true">


                <EditText
                    android:id="@+id/RegisKonPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="0dp"
                    android:inputType="textPassword"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRegisKonPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_regis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="80dp"
                android:layout_marginVertical="30dp"
                android:text="OK"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout8" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>